<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todoleaf.EditTask"
             Title="Edit Task">
    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Primary" Text="Delete" Priority="1" Clicked="DeleteTask_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="10,10,10,10">
            <Entry x:Name="entText" Text="ahoj" FontSize="Medium" FontAttributes="None" HorizontalOptions="Center" WidthRequest="350"/>
            <Picker x:Name="pkrCategories" Title="Categories" SelectedIndex="0">
            </Picker>
            <Button Text="Save Task" HorizontalOptions="Center" Clicked="SaveTask_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>